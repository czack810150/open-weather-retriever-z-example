<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.weather.weatherexample.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:id="@+id/day1WeatherLinearLayout">

        <TextView
            android:id="@+id/cityNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="City Name"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/day1TemperatureTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.35"
            android:text="Temperature"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/day1WeatherIconImageView"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="0.15"
            app:srcCompat="@android:color/transparent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/day1WeatherLinearLayout"
        android:layout_marginTop="44dp"
        android:orientation="horizontal"
        android:id="@+id/day2WeatherLinearLayout">

        <TextView
            android:id="@+id/day2DateTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="Date"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/day2HighTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.30"
            android:text="High:"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/day2LowTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="Low:"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/day2WeatherIconImageView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            app:srcCompat="@android:color/transparent" />
    </LinearLayout>

    <TextView
        android:id="@+id/degreeFIndicatorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/degreeCIndicatorTextView"
        android:layout_marginStart="45dp"
        android:layout_toEndOf="@+id/degreeCIndicatorTextView"
        android:text="@string/degree_fahrenheit"
        android:textSize="45sp" />

    <TextView
        android:id="@+id/degreeCIndicatorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="84dp"
        android:layout_marginStart="138dp"
        android:text="@string/degree_celsius"
        android:textSize="45sp" />


</RelativeLayout>
